@model IEnumerable<ListaTelefonica.Infra.Models.Agenda>
@{
    ViewBag.Title = "Lista de Telefone";
}
<h2>@ViewBag.Title</h2>


@*<blockquote>
        <p>@ViewBag.Title</p>
        <small>Bem <cite title="Source Title">Vindo</cite></small>
    </blockquote>*@
<hr />

@if (TempData["msgerror"] != null)
{
    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="close" data-dismiss="alert"></button>
        @TempData["msgerror"]
    </div>
}
else if (TempData["msgsucesso"] != null)
{
    <div class="alert alert-dismissible alert-sucess">
        <button type="button" class="close" data-dismiss="alert"></button>
        @TempData["msgsucesso"]
    </div>

}

<table id="example" class="display" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th style="text-align: center;">Nome</th>
            <th style="text-align: center;">E-mail Contato</th>
            <th style="text-align: center;">Telefone Contato</th>
            <th style="text-align: center;">Empresa</th>
            <th style="text-align: center;">Endereço</th>
            <th style="text-align: center;">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="text-align: center;">
                <td>@item.NomeContato</td>
                <td>@item.EmailContato</td>
                <td>@item.TelefoneContato</td>
                <td>@item.Empresa'</td>
                <td>@item.Endereco</td>
                <td>
                    <a href="@Url.Action("edit", "home", new { id = item.IdAgenda })" data-toggle=data-toggle ="tooltip" title="Editar"><img width="20" src="~/Content/img/edit.png" /></a>
                    <a href="@Url.Action("details", "home", new { id = item.IdAgenda })" data-toggl data-toggle="tooltip" title="Visualizar"><img width="20" src="~/Content/img/view.png" /></a>
                    <a href="@Url.Action("delete", "home", new { id = item.IdAgenda })" data-toggl data-toggle="tooltip" title="Excluir"><img width="20" src="~/Content/img/delete.png" /></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="form-group">
    <div class="col-lg-2 col-lg-offset-0">
        <form method="get" action="@Url.Action("create", "home")">
            <button type="submit" class="btn btn-success">Novo</button>
        </form>
    </div>
</div>

